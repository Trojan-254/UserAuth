<!-- Deals Section -->
<section id="deals" class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4">
        <!-- Section Title -->
        <h2 class="text-3xl font-extrabold text-center text-gray-800 mb-12">Hot Deals</h2>

        <!-- Deals Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% const deals = [
                { 
                    title: 'Flash Sale', 
                    discount: '50% OFF', 
                    ends: '24 Hours Left', 
                    buttonLabel: 'Shop Now',
                    bgGradient: 'from-orange-500 to-red-500'
                },
                { 
                    title: 'Clearance', 
                    discount: '30% OFF', 
                    ends: '3 Days Left', 
                    buttonLabel: 'Explore Deals',
                    bgGradient: 'from-blue-500 to-teal-500'
                },
                { 
                    title: 'Bundle Deal', 
                    discount: 'Buy 2 Get 1', 
                    ends: 'Limited Time', 
                    buttonLabel: 'Get This Deal',
                    bgGradient: 'from-purple-500 to-pink-500'
                }
            ]; %>

            <% deals.forEach(deal => { %>
                <!-- Single Deal Card -->
                <div class="bg-gradient-to-r <%= deal.bgGradient %> rounded-xl p-8 text-white shadow-lg hover:shadow-2xl transform transition duration-300 ease-in-out hover:scale-105">
                    <h3 class="text-3xl font-extrabold mb-2 text-shadow-md"><%= deal.title %></h3>
                    <p class="text-5xl font-bold mb-4 text-shadow-md"><%= deal.discount %></p>
                    <p class="mb-6 text-sm font-medium"><%= deal.ends %></p>
                    <button 
                        class="bg-white text-orange-500 px-8 py-3 rounded-full hover:bg-gray-100 transition font-semibold text-lg">
                        <%= deal.buttonLabel %>
                    </button>
                </div>
            <% }); %>
        </div>
    </div>
</section>

    

   
