<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        header {
            background-color: #333;
            color: white;
            padding: 10px 20px;
            text-align: center;
        }

        h1 {
            font-size: 2rem;
            color: #333;
        }

        form {
            max-width: 1000px;
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        form div {
            margin-bottom: 15px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="text"], input[type="number"], select {
            width: 100%;
            padding: 8px;
            font-size: 1rem;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        button {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1rem;
        }

        button:hover {
            background-color: #0056b3;
        }

        .product-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            padding: 20px;
        }

        .product-card {
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .product-card h2 {
            font-size: 1.5rem;
            color: #333;
        }

        .product-card p {
            color: #666;
            font-size: 1rem;
            margin-bottom: 10px;
        }

        .product-card .price {
            font-size: 1.2rem;
            color: #28a745;
            font-weight: bold;
        }

        .pagination {
            text-align: center;
            margin-top: 20px;
        }

        .pagination a {
            padding: 10px 20px;
            margin: 0 5px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 4px;
        }

        .pagination a:hover {
            background-color: #0056b3;
        }

        .pagination span {
            font-size: 1rem;
            color: #333;
            margin: 0 10px;
        }
    </style>
</head>
<body>

    <header>
        <h1>Product List</h1>
    </header>

    <form action="/products" method="GET">
        <div>
            <label for="category">Category:</label>
            <input type="text" id="category" name="category" value="<%= category || '' %>">
        </div>
        <div>
            <label for="minPrice">Min Price:</label>
            <input type="number" id="minPrice" name="minPrice" value="<%= minPrice || '' %>">
        </div>
        <div>
            <label for="maxPrice">Max Price:</label>
            <input type="number" id="maxPrice" name="maxPrice" value="<%= maxPrice || '' %>">
        </div>
        <div>
            <label for="sort">Sort By:</label>
            <select name="sort" id="sort">
                <option value="">None</option>
                <option value="price:asc" <%= sort === 'price:asc' ? 'selected' : '' %>>Price (Low to High)</option>
                <option value="price:desc" <%= sort === 'price:desc' ? 'selected' : '' %>>Price (High to Low)</option>
            </select>
        </div>
        <button type="submit">Filter</button>
    </form>

    <div class="product-list">
        <% products.forEach(product => { %>
            <div class="product-card">
                <h2><%= product.name %></h2>
                <p><%= product.description %></p>
                <p class="price">$<%= product.price %></p>
                <p>Category: <%= product.category ? product.category.name : 'No category' %></p>
            </div>
        <% }) %>
    </div>

    <div class="pagination">
        <% if (currentPage > 1) { %>
            <a href="/products?page=<%= currentPage - 1 %>&category=<%= category %>&minPrice=<%= minPrice %>&maxPrice=<%= maxPrice %>&sort=<%= sort %>">Previous</a>
        <% } %>
        <span>Page <%= currentPage %> of <%= totalPages %></span>
        <% if (currentPage < totalPages) { %>
            <a href="/products?page=<%= currentPage + 1 %>&category=<%= category %>&minPrice=<%= minPrice %>&maxPrice=<%= maxPrice %>&sort=<%= sort %>">Next</a>
        <% } %>
    </div>

</body>
</html>
