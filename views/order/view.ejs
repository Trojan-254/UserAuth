<!-- views/order/view.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders - Zetu Cart</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <!-- Add Custom CSS -->
    <style>
        .order-timeline-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
        }
        .status-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.875rem;
            font-weight: 500;
        }
        .animate-pulse {
            animation: pulse 2s infinite;
        }
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: .5; }
        }
    </style>
</head>
<body class="bg-gray-50">

 <!-- Navigation -->
    <nav class="bg-white shadow-sm">
        <div class="container mx-auto px-4">
            <div class="flex items-center justify-between h-16">
                <!-- Logo and Brand -->
                <div class="flex items-center">
                    <a href="/" class="flex items-center">
                        <span class="text-2xl font-bold text-orange-500">Zetu</span>
                        <span class="text-2xl font-bold text-gray-900">Cart</span>
                    </a>
                </div>

                <!-- Navigation Links -->
                <div class="hidden md:block">
                    <div class="flex items-center space-x-8">
                        <a href="/dashboard" class="text-gray-600 hover:text-gray-900">Home</a>
                        <a href="/products/all" class="text-gray-600 hover:text-gray-900">Shop</a>
                        <a href="/my-orders" class="text-blue-600 font-medium">My Orders</a>
                    </div>
                </div>

                <!-- Right Navigation -->
                <div class="flex items-center space-x-4">
                    <!-- Search Button -->
                    <button class="text-gray-600 hover:text-gray-900">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                    </button>

                    <!-- Cart Button -->
                    <a href="/cart/my-cart" class="text-gray-600 hover:text-gray-900 relative">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                        <!-- <span class="absolute -top-1 -right-1 bg-blue-600 text-white rounded-full text-xs w-4 h-4 flex items-center justify-center">3</span> -->
                    </a>

                    <!-- User Menu -->
                    <div class="relative">
                        <button class="flex items-center space-x-1 text-gray-600 hover:text-gray-900">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            <span class="hidden md:inline-block">Account</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Mobile Navigation Menu (shown on smaller screens) -->
    <div class="md:hidden bg-white border-t border-gray-200">
        <div class="container mx-auto px-4 py-2">
            <div class="flex justify-between">
                <a href="/" class="flex flex-col items-center px-4 py-2 text-gray-600">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                    </svg>
                    <span class="text-xs">Home</span>
                </a>
                <a href="/shop" class="flex flex-col items-center px-4 py-2 text-gray-600">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                    </svg>
                    <span class="text-xs">Shop</span>
                </a>
                <a href="/my-orders" class="flex flex-col items-center px-4 py-2 text-blue-600">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                    <span class="text-xs">Orders</span>
                </a>
                <a href="/account" class="flex flex-col items-center px-4 py-2 text-gray-600">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    <span class="text-xs">Account</span>
                </a>
            </div>
        </div>
    </div>
    <div class="min-h-screen container mx-auto px-4 py-8">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">My Orders</h1>
            <p class="mt-2 text-sm text-gray-600">Track and manage your orders</p>
        </div>

        <% if (orders && orders.length > 0) { %>
            <!-- Orders List -->
            <div class="space-y-6">
                <% orders.forEach(order => { %>
                    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                        <!-- Order Header -->
                        <div class="border-b border-gray-200 bg-gray-50 p-4 sm:px-6">
                            <div class="flex flex-wrap justify-between items-center">
                                <div class="space-y-1">
                                    <p class="text-sm font-medium text-gray-600">
                                        Order ID: <span class="text-gray-900">#<%= order._id %></span>
                                    </p>
                                    <p class="text-sm text-gray-500">
                                        Placed on <%= new Date(order.createdAt).toLocaleDateString('en-US', { 
                                            year: 'numeric', 
                                            month: 'long', 
                                            day: 'numeric',
                                            hour: '2-digit',
                                            minute: '2-digit'
                                        }) %>
                                    </p>
                                </div>
                                <div class="flex space-x-3">
                                    <!-- Order Status Badge -->
                                    <span class="status-badge <%= 
                                        order.orderStatus === 'pending' ? 'bg-yellow-100 text-yellow-800' :
                                        order.orderStatus === 'processing' ? 'bg-blue-100 text-blue-800' :
                                        order.orderStatus === 'shipped' ? 'bg-purple-100 text-purple-800' :
                                        order.orderStatus === 'delivered' ? 'bg-green-100 text-green-800' :
                                        'bg-red-100 text-red-800'
                                    %>">
                                        <%= order.orderStatus.charAt(0).toUpperCase() + order.orderStatus.slice(1) %>
                                    </span>
                                    <!-- Payment Status Badge -->
                                    <span class="status-badge <%= 
                                        order.paymentStatus === 'completed' ? 'bg-green-100 text-green-800' :
                                        order.paymentStatus === 'failed' ? 'bg-red-100 text-red-800' :
                                        'bg-yellow-100 text-yellow-800'
                                    %>">
                                        Payment: <%= order.paymentStatus.charAt(0).toUpperCase() + order.paymentStatus.slice(1) %>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Order Timeline -->
                        <div class="p-4 sm:px-6 border-b border-gray-200">
                            <div class="flex items-center space-x-2">
                                <% ['pending', 'processing', 'shipped', 'delivered'].forEach((status, index) => { %>
                                    <div class="flex items-center">
                                        <div class="flex flex-col items-center">
                                            <div class="order-timeline-dot <%= 
                                                order.orderStatus === status ? 'bg-blue-600 animate-pulse' :
                                                ['delivered', 'shipped', 'processing'].includes(order.orderStatus) && 
                                                ['pending', 'processing', 'shipped'].includes(status) ? 'bg-green-500' :
                                                'bg-gray-300'
                                            %>"></div>
                                            <span class="text-xs mt-1 <%= 
                                                order.orderStatus === status ? 'text-blue-600 font-medium' :
                                                'text-gray-500'
                                            %>">
                                                <%= status.charAt(0).toUpperCase() + status.slice(1) %>
                                            </span>
                                        </div>
                                        <% if (index < 3) { %>
                                            <div class="w-16 h-0.5 <%= 
                                                ['delivered', 'shipped', 'processing'].includes(order.orderStatus) && 
                                                ['pending', 'processing', 'shipped'].includes(status) ? 'bg-green-500' :
                                                'bg-gray-300'
                                            %>"></div>
                                        <% } %>
                                    </div>
                                <% }) %>
                            </div>
                        </div>

                        <!-- Order Items -->
                        <div class="p-4 sm:px-6">
                            <div class="space-y-4">
                                <% order.items.forEach(item => { %>
                                    <div class="flex items-center space-x-4">
                                        <!-- Product Image Placeholder -->
                                        <div class="w-16 h-16 bg-gray-200 rounded-md flex items-center justify-center">
                                            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                            </svg>
                                        </div>
                                        <div class="flex-1">
                                            <h4 class="text-sm font-medium text-gray-900"><%= item.product.name %></h4>
                                            <p class="text-sm text-gray-500">Quantity: <%= item.quantity %></p>
                                            <p class="text-sm text-gray-500">Price per item: KSH <%= item.price.toLocaleString() %></p>
                                        </div>
                                        <div class="text-sm font-medium text-gray-900">
                                            KSH <%= (item.quantity * item.price).toLocaleString() %>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>

                        <!-- Order Details -->
                        <div class="border-t border-gray-200 p-4 sm:px-6">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <!-- Shipping Details -->
                                <div>
                                    <h4 class="text-sm font-medium text-gray-900 mb-2">Shipping Details</h4>
                                    <div class="text-sm text-gray-600">
                                        <p><%= order.shipping.customerShippingDetails.firstName %> <%= order.shipping.customerShippingDetails.lastName %></p>
                                        <p><%= order.shipping.customerShippingDetails.phone %></p>
                                        <p><%= order.shipping.customerShippingDetails.email %></p>
                                        <p><%= order.address %></p>
                                        <p><%= order.shipping.address.city %>, <%= order.shipping.address.county %></p>
                                        
                                    </div>
                                </div>

                                <!-- Payment Details -->
                                <div>
                                    <h4 class="text-sm font-medium text-gray-900 mb-2">Payment Details</h4>
                                    <div class="text-sm text-gray-600">
                                        <% if (order.mpesaDetails && order.mpesaDetails.mpesaReceiptNumber) { %>
                                            <p>M-PESA Transaction ID: <%= order.mpesaDetails.mpesaReceiptNumber %></p>
                                            <p>Phone Number: <%= order.mpesaDetails.phoneNumber %></p>
                                        <% } %>
                                        <p class="mt-2">
                                            <span class="font-medium">Total Amount:</span>
                                            <span class="text-lg font-bold text-gray-900 ml-2">
                                                KSH <%= order.totalAmount.toLocaleString() %>
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Order Actions -->
                        <div class="border-t border-gray-200 p-4 sm:px-6 bg-gray-50">
                            <div class="flex justify-end space-x-3">
                                <% if (order.orderStatus === 'delivered') { %>
                                    <button class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 text-sm font-medium">
                                        Write Review
                                    </button>
                                <% } %>
                                <% if (['pending', 'processing'].includes(order.orderStatus)) { %>
                                    <button class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 text-sm font-medium">
                                        Cancel Order
                                    </button>
                                <% } %>
                                <button class="px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-50 text-sm font-medium text-gray-700">
                                    Track Order
                                </button>
                                <button class="px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-50 text-sm font-medium text-gray-700">
                                    Download Invoice
                                </button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <!-- Empty State -->
            <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">No orders found</h3>
                <p class="mt-1 text-sm text-gray-500">Start shopping to see your orders here.</p>
                <div class="mt-6">
                    <a href="/" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                        Start Shopping
                    </a>
                </div>
            </div>
        <% } %>
    </div>
</body>
</html>
